  "imports": {
    "@panva/jose": "jsr:@panva/jose@^6.0.10",
    "@std/assert": "jsr:@std/assert@1",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.3",
    "@types/bcrypt": "npm:@types/bcrypt@^5.0.2",
    "@types/cors": "npm:@types/cors@^2.8.17",
    "@types/express": "npm:@types/express@^5.0.0",
    "bcrypt": "npm:bcrypt@^5.1.1",
    "cors": "npm:cors@^2.8.5",
    "express": "npm:express@^4.21.2",
    "ollama": "npm:ollama@^0.5.14",
    "pg": "npm:pg@^8.13.3",
    "reflect-metadata": "npm:reflect-metadata@^0.2.2",
    "typeorm": "npm:typeorm@^0.3.21"
  },
  "nodeModulesDir": "auto"
}
