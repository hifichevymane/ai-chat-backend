{
  "tasks": {
    "dev": "deno run --env-file --allow-net --allow-read --allow-env --allow-ffi --watch src/main.ts",
    "start": "deno run --env-file --allow-net --allow-read --allow-env --allow-ffi src/main.ts"
  },
