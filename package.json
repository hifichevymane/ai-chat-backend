{
  "name": "ai-chat-backend",
  "version": "1.0.0",
  "description": "Backend for an AI chat application using Express, Prisma, and PostgreSQL.",
  "main": "dist/main.js",
  "scripts": {
    "start": "pnpm dlx tsx src/main.ts",
    "dev": "tsx watch src/main.ts",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prisma-studio": "prisma studio",
    "format": "prettier --write .",
    "db:migrate:dev": "prisma migrate dev && prisma generate",
    "db:migrate:prod": "pnpm dlx prisma migrate deploy && pnpm dlx prisma generate",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build -d"
  },
  "type": "module",
  "keywords": [
    "ai",
    "chat",
    "backend",
    "express",
    "prisma",
    "postgresql",
    "ollama",
    "typescript"
  ],
  "author": "Maksym Rumu(hifichevymane)",
  "repository": {
    "type": "git",
    "url": "https://github.com/hifichevymane/ai-chat-backend.git"
  },
  "license": "ISC",
  "packageManager": "pnpm@10.13.1",
  "dependencies": {
    "@prisma/client": "^6.10.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jose": "^6.0.11",
    "morgan": "^1.10.0",
    "ollama": "^0.5.16",
    "ora": "^8.2.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.2",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.0.3",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "prettier": "^3.5.3",
    "prisma": "^6.10.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1"
  }
}
