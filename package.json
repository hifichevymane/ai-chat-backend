{
  "name": "ai-chat-backend",
  "version": "1.0.0",
  "description": "Backend for an AI chat application using Express, Prisma, and PostgreSQL.",
  "main": "dist/main.js",
  "scripts": {
    "start": "pnpm dlx tsx src/main.ts",
    "dev": "tsx watch src/main.ts",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts",
    "prisma-studio": "prisma studio",
    "format": "prettier --write .",
    "db:migrate:dev": "prisma migrate dev && prisma generate",
    "db:migrate:prod": "pnpm dlx prisma migrate deploy && pnpm dlx prisma generate",
    "db:seed": "tsx src/scripts/seed.ts",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build -d"
  },
  "type": "module",
  "keywords": [
    "ai",
    "chat",
    "backend",
    "express",
    "prisma",
    "postgresql",
    "ollama",
    "typescript"
  ],
  "author": "Maksym Rumu(hifichevymane)",
  "repository": {
    "type": "git",
    "url": "https://github.com/hifichevymane/ai-chat-backend.git"
  },
  "license": "ISC",
  "packageManager": "pnpm@10.14.0",
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cron": "^4.3.3",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jose": "^6.0.12",
    "morgan": "^1.10.1",
    "ollama": "^0.5.16",
    "ora": "^8.2.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@faker-js/faker": "^9.9.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.1.0",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "prettier": "^3.6.2",
    "prisma": "^6.12.0",
    "supertest": "^7.1.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vitest": "^3.2.4",
    "vitest-mock-extended": "^3.1.0"
  }
}
