generator client {
  provider = "prisma-client-js"
  output   = "src//generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ChatMessage {
  id         String                  @id(map: "PK_40c55ee0e571e268b0d3cd37d10") @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  role       ChatMessageRoleEnum     @default(user)
  content    String
  createdAt  DateTime                @default(now()) @db.Timestamp(6) @map("created_at")
  chatId     String                  @db.Uuid @map("chat_id")
  chat       Chat?                   @relation(fields: [chatId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "FK_9f5c0b96255734666b7b4bc98c3")
  
  @@map("chat_messages")
}

model Chat {
  id            String          @id(map: "PK_0117647b3c4a4e5ff198aeb6206") @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  title         String          @db.VarChar(64)
  createdAt     DateTime        @default(now()) @db.Timestamp(6) @map("created_at")
  updatedAt     DateTime        @default(now()) @db.Timestamp(6) @map("updated_at")
  chatMessages  ChatMessage[]

  @@map("chats")
}

enum ChatMessageRoleEnum {
  user
  assistant
  system

  @@map("chat_message_role_enum")
}
